
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var categories = (List<CategoryListModel>)ViewBag.Category;
}

@model BlogAddModel



<form method="post" asp-action="Create" class="p-3 w-75" enctype="multipart/form-data">
    <div class="form-group">
        <h6>Kategoriler</h6>

        @foreach (var category in categories)
        {
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="CategoryId" value="@category.Id">
                <label class="form-check-label" for="inlineRadio1">@category.Name</label>
            </div>
        }
    </div>

    <div class="form-group">
        <label asp-for="Title">Başlık</label>
        <input class="form-control" asp-for="Title">
    </div>
    <div class="form-group my-2">
        <label asp-for="ShortDescription">Kısa Açıklama</label>
        <textarea asp-for="ShortDescription" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Description">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="input-group my-2">
        <label asp-for="Image" class="input-group-text" for="inputGroupFile01">Resim</label>
        <input type="file" class="form-control" id="inputGroupFile01" asp-for="Image">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-info btn-lg">Kaydet</button>
    </div>
</form>
<div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
@section Css{
    <link href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet" />
}
@section JavaScript{
    <script src="~/lib/Trumbowyg-main/dist/trumbowyg.min.js"></script>
    <script>
        $("#Description").trumbowyg();
    </script>
}
