
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    string errorMessage = (string)TempData["errorMessage"];
}

@model List<BlogListModel>

<a asp-action="Create" asp-controller="Blog" asp-area="Admin" class="btn btn-outline-info btn-sm my-2">Yeni Blog Yaz</a>
<table class="table table-bordered table-hover table-sm">
    <tbody>
        <tr>
            <th>Başlık</th>
            <th>Yayın Tarihi</th>
            <th>İşlemler</th>
        </tr>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.Title</td>
                <td>@blog.PostedTime</td>
                <td>
                    <a asp-action="Update" asp-route-id="@blog.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}