@model List<CategoryListModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    string errorMessage = (string)TempData["errorMessage"];
}

<a asp-action="Create" asp-controller="Category" asp-area="Admin" class="btn btn-outline-info btn-sm my-2">Yeni Kategori</a>
<table class="table table-bordered table-hover table-sm">
    <tbody>
        <tr>
            <th>Ad</th>
            <th>İşlem</th>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Update" asp-controller="Category" asp-area="Admin" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-controller="Category" asp-area="Admin" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (!string.IsNullOrEmpty(errorMessage))
{
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    @errorMessage
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}