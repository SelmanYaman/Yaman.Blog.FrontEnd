
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<BlogListModel>

@if (ViewBag.CategoryName != null)
{
    <h4 class="my-3">@ViewBag.CategoryName kategorisi ile ilgili makaleler</h4>
    if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <div class="blog-post">
                    <a asp-action="Details" asp-route-blogId="@item.Id"><getBlogImage Id="@item.Id" image-boyut="1"></getBlogImage></a>
                    <div class="mt-4 mb-3 d-flex">
                        <div class="post-info mx-2">
                            <i class="fas fa-calendar-check"></i>
                            <span>Yayın Tarihi : @item.PostedTime.ToShortDateString()</span>
                        </div>
                    </div>
                    <a asp-action="Details" asp-route-blogId="@item.Id" class="h4 ">@item.Title</a>
                    <p class="mt-3">@item.ShortDescription</p>
                    <a asp-action="Details" asp-route-blogId="@item.Id" class="read-more">Devamını Oku... <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
        }
    }
}

else if (ViewBag.Search != null)
{
    <h4 class="my-3">Aranan Kelime : @ViewBag.Search</h4>
    if (Model == null)
    {
        <h5>Sonuç bulanamadı...</h5>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <div class="blog-post">
                    <a asp-action="Details" asp-route-blogId="@item.Id"><getBlogImage Id="@item.Id" image-boyut="1"></getBlogImage></a>
                    <div class="mt-4 mb-3 d-flex">
                        <div class="post-info mx-2">
                            <i class="fas fa-calendar-check"></i>
                            <span>Yayın Tarihi : @item.PostedTime.ToShortDateString()</span>
                        </div>
                    </div>
                    <a asp-action="Details" asp-route-blogId="@item.Id" class="h4 ">@item.Title</a>
                    <p class="mt-3">@item.ShortDescription</p>
                    <a asp-action="Details" asp-route-blogId="@item.Id" class="read-more">Devamını Oku... <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
        }
    }
}

else
{
    <h4 class="my-3">Tüm Makaleler...</h4>
    if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <div class="blog-post">
                    <a asp-action="Details" asp-route-blogId="@item.Id"><getBlogImage Id="@item.Id" image-boyut="1"></getBlogImage></a>
                    <div class="mt-4 mb-3 d-flex">
                        <div class="post-info mx-2">
                            <i class="fas fa-calendar-check"></i>
                            <span>Yayın Tarihi : @item.PostedTime.ToShortDateString()</span>
                        </div>
                    </div>
                    <a asp-action="Details" asp-route-blogId="@item.Id" class="h4 ">@item.Title</a>
                    <p class="mt-3">@item.ShortDescription</p>
                    <a asp-action="Details" asp-route-blogId="@item.Id" class="read-more">Devamını Oku... <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
        }
    }
}